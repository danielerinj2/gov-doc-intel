# Supabase project URL (must be HTTPS URL, not postgres://)
SUPABASE_URL=https://your-project-ref.supabase.co

# API key for server-side app. Prefer SUPABASE_SERVICE_KEY for backend.
# You may also use publishable/anon for limited access.
SUPABASE_KEY=your_supabase_key

# Optional aliases (if you prefer explicit naming)
SUPABASE_ANON_KEY=
SUPABASE_SERVICE_KEY=

GROQ_API_KEY=your_groq_api_key
GROQ_MODEL=llama-3.1-70b-versatile
GROQ_USER_AGENT=Mozilla/5.0 (X11; Linux x86_64) AppleWebKit/537.36 (KHTML, like Gecko) Chrome/120.0.0.0 Safari/537.36

# Event bus backend: inmemory | kafka | pulsar
EVENT_BUS_BACKEND=inmemory
KAFKA_BOOTSTRAP_SERVERS=
KAFKA_TOPIC=document-events
PULSAR_SERVICE_URL=
PULSAR_TOPIC=persistent://public/default/document-events

# OCR/Authenticity/Fraud integration controls
OCR_BACKEND=paddleocr
OCR_DEFAULT_LANG=eng+hin
OCR_DEVICE=auto
OCR_MIN_CONFIDENCE=0.55
OCR_DET_MODEL_NAME=PP-OCRv5_server_det
OCR_REC_MODEL_NAME=PP-OCRv5_server_rec
OCR_USE_DOC_ORIENTATION_CLASSIFY=true
OCR_USE_DOC_UNWARPING=true
OCR_USE_TEXTLINE_ORIENTATION=true

# Classifier backend: heuristic | layoutlm | fusion
CLASSIFIER_BACKEND=heuristic
LAYOUTLM_MODEL_DIR=./saved_model
FUSION_MODEL_PATH=checkpoints/final_fusion_model.pt
FUSION_LABEL_MAP_PATH=data/label_map.json
AUTHENTICITY_BACKEND=heuristic
FRAUD_CALIBRATION_WEIGHTS={"image":0.35,"behavioral":0.35,"issuer":0.30}

# Issuer registry integration
ISSUER_REGISTRY_BASE_URL=
ISSUER_REGISTRY_TOKEN=

APP_ENV=dev
AUTH_PROVIDER=supabase

# Appwrite (used when AUTH_PROVIDER=appwrite)
APPWRITE_ENDPOINT=
APPWRITE_PROJECT_ID=
APPWRITE_PROJECT_NAME=
APPWRITE_API_KEY=
APPWRITE_RECOVERY_REDIRECT_URL=

# Auth/UI defaults
DEFAULT_WORKSPACE_ID=workspace-default
APP_LOGIN_URL=https://govdociq.streamlit.app
SUPABASE_PASSWORD_RESET_REDIRECT_URL=https://govdociq.streamlit.app

# SendGrid email sender
SENDGRID_API_KEY=
SENDGRID_FROM_EMAIL=
